{
	"name": "ICP Hello World Motoko",
	"image": "ghcr.io/dfinity/icp-dev-env:1",
	"forwardPorts": [4943, 3000],
	"portsAttributes": {
		"4943": {
			"label": "dfx",
			"onAutoForward": "ignore"
		},
		"3000": {
			"label": "dev server",
			"onAutoForward": "openBrowser"
		}
	},
	"onCreateCommand": "nohup bash -c 'dfx start --clean --background&'",
	"postCreateCommand": "export MO_DEV_HIDE_URLS=1 && npm i -g ic-mops@latest",
	"postStartCommand": "([ -f nohup.out ] && (mops toolchain init && . ~/.bashrc && npm run setup && cat nohup.out && rm nohup.out)) || exit 0",
	"postAttachCommand": "npm run start",
	"customizations": {
		"vscode": {
			"extensions": ["dfinity-foundation.vscode-motoko", "svelte.svelte-vscode"]
		}
	}
}
