{
	"name": "ICP Hello World Motoko",
	"image": "ghcr.io/dfinity/icp-dev-env:1",
	"forwardPorts": [4943, 3000],
	"portsAttributes": {
		"4943": {
			"label": "dfx",
			"onAutoForward": "ignore"
		},
		"3000": {
			"label": "dev server",
			"onAutoForward": "openBrowser"
		}
	},
	"postCreateCommand": "export MO_DEV_HIDE_URLS=1 && dfx start --background --clean && npm i -g ic-mops@latest && mops toolchain init && npm run setup",
  "postStartCommand": "npm run start",
	"postAttachCommand": "npm run start",
	"customizations": {
		"vscode": {
			"extensions": ["dfinity-foundation.vscode-motoko", "svelte.svelte-vscode"]
		}
	}
}
